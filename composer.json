{
    "name": "resp-app/blog-backend",
    "description": "Blog Context Backend - DDD Architecture",
    "type": "project",
    "require": {
        "php": "8.2 - 8.5",
        "ext-mbstring": "*",
        "nikic/fast-route": "^1.3",
        "doctrine/dbal": "^4.3",
        "league/plates": "^3.6",
        "responsive-sk/slim4-paths": "^6.0",
        "nyholm/psr7": "^1.8",
        "nyholm/psr7-server": "^1.1",
        "psr/container": "^2.0",
        "psr/http-server-middleware": "^1.0"

    },
    "autoload": {
        "psr-4": {
            "Blog\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Blog\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "dev": "php -S localhost:8000 -t public",
        "test": "phpunit",
        "test:unit": "phpunit --testsuite=Unit",
        "test:integration": "phpunit --testsuite=Integration"
    },
    "require-dev": {
        "phpunit/phpunit": "^12.4.5"
    }
}
