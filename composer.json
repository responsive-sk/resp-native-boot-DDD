{
    "name": "resp-app/blog-backend",
    "description": "Context Backend - DDD Architecture",
    "type": "project",
    "require": {
        "php": "8.2 - 8.5",
        "ext-iconv": "*",
        "ext-mbstring": "*",
        "doctrine/dbal": "^4.3",
        "league/plates": "^3.6",
        "nikic/fast-route": "^1.3",
        "nyholm/psr7": "^1.8",
        "nyholm/psr7-server": "^1.1",
        "psr/container": "^2.0",
        "psr/http-server-middleware": "^1.0",
        "responsive-sk/slim4-paths": "^6.0",
        "ramsey/uuid": "^4.9",
        "vlucas/phpdotenv": "^5.6",
        "responsive-sk/slim4-session": "^2.2",
        "cloudinary/cloudinary_php": "^3.1"
    },
    "autoload": {
        "psr-4": {
            "Blog\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Blog\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "dev": "php -S localhost:8000 -t public",
        "test": "phpunit",
        "test:unit": "phpunit --testsuite=Unit",
        "test:integration": "phpunit --testsuite=Integration",
        "cs-check": "php-cs-fixer fix --dry-run --verbose",
        "cs-fix": "php-cs-fixer fix",
        "cs-fix:diff": "php-cs-fixer fix --diff",
        "lint": "php-cs-fixer fix --dry-run --using-cache=no",
        "cs": "php-cs-fixer fix",
        "cs:dry": "php-cs-fixer fix --dry-run --diff",
        "cs:check": "php-cs-fixer fix --dry-run --verbose",
        "cs:risky": "php-cs-fixer fix --allow-risky=yes",
        "cs:cache:clear": "php-cs-fixer fix --using-cache=no",
        "stan": "vendor/bin/phpstan analyse --memory-limit=1G src config",
        "stan:strict": "vendor/bin/phpstan analyse --level=max --memory-limit=1G src config",
        "analyse": [
            "@cs-check",
            "@stan"
        ],
        "analyse:strict": [
            "@lint",
            "@stan:strict"
        ],
        "pre-commit": [
            "@cs-fix",
            "@test"
        ],
        "pre-commit:strict": [
            "@cs-fix",
            "@stan",
            "@test"
        ],
        "ci": [
            "@lint",
            "@stan",
            "@test"
        ]
    },
    "require-dev": {
        "phpunit/phpunit": "^12.4.5",
        "friendsofphp/php-cs-fixer": "^3.93",
        "phpstan/phpstan": "^1.0",
        "responsive-sk/php-debugbar-middleware": "^1.0",
        "filp/whoops": "^2.18"
    }
}
